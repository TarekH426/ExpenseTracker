@model ExpenseTracker.DAL.Models.Expense

@{
    ViewData["Title"] = "Expense Details";
}

<div class="container mt-4">
    <h2>Expense Details</h2>

    <dl class="row mt-3">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@(Model.Category?.Title ?? "-")</dd>

        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

        <dt class="col-sm-3">Note</dt>
        <dd class="col-sm-9">@Model.Note</dd>
    </dl>

    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ExpenseId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</div>


