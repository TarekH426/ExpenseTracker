@model ExpenseTracker.DAL.Models.ExpenseIndexViewModel

@{
    ViewData["Title"] = "Expenses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Expenses</h2>
        <a class="btn btn-primary" asp-action="Create">Add Expense</a>
    </div>

    <form method="get" asp-action="Index" class="row g-2 mb-3">
        <div class="col-auto">
            <select class="form-select" name="month" aria-label="Month">
                @for (var m = 1; m <= 12; m++)
                {
                    <option value="@m" selected="@(m == Model.SelectedMonth)">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(m)</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <input type="number" class="form-control" name="year" value="@Model.SelectedYear" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary">Filter</button>
        </div>
    </form>

    <div class="card mb-3">
        <div class="card-body d-flex justify-content-between">
            <div><strong>Total (@Model.SelectedMonth/@Model.SelectedYear):</strong></div>
            <div class="fw-bold">@Model.MonthlyTotal.ToString("C")</div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Category</th>
                    <th class="text-end">Amount</th>
                    <th>Note</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Expenses.Any())
                {
                    foreach (var e in Model.Expenses)
                    {
                        <tr>
                            <td>@e.Date.ToString("yyyy-MM-dd")</td>
                            <td>
                                <span class="d-inline-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(e.Category?.Icon))
                                    {
                                        if (e.Category.Icon.Contains("/") || e.Category.Icon.StartsWith("http"))
                                        {
                                            <span class="et-cat-badge et-cat-badge-img" style="background-image:url('@e.Category.Icon')"></span>
                                        }
                                        else
                                        {
                                            <span class="et-cat-badge">@e.Category.Icon</span>
                                        }
                                    }
                                    <span>@(e.Category?.Title ?? "-")</span>
                                </span>
                            </td>
                            <td class="text-end">@e.Amount.ToString("C")</td>
                            <td>@e.Note</td>
                            <td class="text-nowrap text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@e.ExpenseId">Details</a>
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@e.ExpenseId">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@e.ExpenseId">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No expenses found for this period.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Category Totals</h5>
                    <ul class="list-group">
                        @foreach (var kv in Model.CategoryTotals)
                        {
                            <li class="list-group-item d-flex justify-content-between">
                                <span>@kv.Key</span>
                                <span>@kv.Value.ToString("C")</span>
                            </li>
                        }
                        @if (!Model.CategoryTotals.Any())
                        {
                            <li class="list-group-item">No data.</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


